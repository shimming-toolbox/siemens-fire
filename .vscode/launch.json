    "version": "0.2.0",
    "configurations": [
        // Start server
        {
            "name": "Start server",
            "type": "debugpy",
            "request": "launch",
            "program": "/opt/code/python-ismrmrd-server/main.py",
            "args": [
                "-H", "0.0.0.0",
                "-p", "9020",
                // "-v",
                // "-s"
            ],
            "console": "integratedTerminal",
            "consoleTitle": "Server",
            "justMyCode": true,
        },

        // Run client
        {
            "name": "Run client",
            "type": "debugpy",
            "request": "launch",
            "program": "/opt/code/python-ismrmrd-server/client.py",
            "args": [
                "/opt/code/python-ismrmrd-server/data/shepplogan_raw.mrd",
                "-p", "9020",
                "-c", "invertcontrast",
                "-o", "/opt/code/python-ismrmrd-server/data/shepplogan_recon.mrd"
            ],
            "console": "integratedTerminal",
            "consoleTitle": "Client",
            "justMyCode": true,
        },
    ],
    "compounds":
    [
        {
            "name": "Server + client",
            "configurations": ["Start server", "Run client"]
        },
    ]

}
